// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Application {
  id          String   @id @default(cuid())
  name        String
  idNumber    String?
  email       String
  phone       String
  roomType    String
  course      String
  yearOfStudy String
  nsfasStatus Boolean
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}

model Interest {
  id            String    @id @default(cuid())
  name          String
  email         String
  phone         String
  preferredDate DateTime?
  createdAt     DateTime  @default(now())
}

model Incident {
  id             String   @id @default(cuid())
  date           DateTime
  time           String
  location       String
  description    String
  type           String
  reporterName   String
  reporterContact String
  createdAt      DateTime @default(now())
}
