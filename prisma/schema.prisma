// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("concordiaDB_POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("concordiaDB_POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Application {
  id          String   @id @default(cuid())
  name        String
  idNumber    String?
  email       String
  phone       String
  roomType    String
  course      String
  yearOfStudy String
  nsfasStatus Boolean
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}

model Interest {
  id            String    @id @default(cuid())
  name          String
  email         String
  phone         String
  preferredDate DateTime?
  createdAt     DateTime  @default(now())
}

model Incident {
  id             String   @id @default(cuid())
  date           DateTime
  time           String
  location       String
  description    String
  type           String
  reporterName   String
  reporterContact String
  createdAt      DateTime @default(now())
}

model Suggestion {
  id          String   @id @default(cuid())
  name        String?
  email       String?
  suggestion  String
  category    String
  createdAt   DateTime @default(now())
}
